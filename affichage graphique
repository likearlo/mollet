import matplotlib.pyplot as plt

# Fonction pour lire les données du fichier texte
def lire_donnees(nom_fichier):
    with open(nom_fichier, 'r') as fichier:
        lignes = fichier.readlines()
        donnees = [float(ligne.strip()) for ligne in lignes]  # Convertir les lignes en nombres flottants
    return donnees

# Fonction pour créer un graphique à partir des données
def creer_graphique(x, y, titre, xlabel, ylabel):
    plt.plot(x, y)
    plt.title(titre)
    plt.xlabel(xlabel)
    plt.ylabel(ylabel)
    plt.show()

# Lire les données du fichier texte
donnees = lire_donnees('donnees.txt')

# Supposons que vous avez déjà extrait les données nécessaires
x = [1, 2, 3, 4, 5]  # Exemple de données pour l'axe des x
y = donnees[:5]      # Exemple de données pour l'axe des y

# Créer le graphique
creer_graphique(x, y, 'Mon Graphique', 'Axe des x', 'Axe des y')
